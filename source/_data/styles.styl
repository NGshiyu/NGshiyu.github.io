// 自定义滚动条样式
::-webkit-scrollbar
  width 8px

::-webkit-scrollbar-track
  background rgba(0, 0, 0, 0.1)

::-webkit-scrollbar-thumb
  background linear-gradient(45deg, #3498db, #9b59b6)
  border-radius 4px

::-webkit-scrollbar-thumb:hover
  background linear-gradient(45deg, #2980b9, #8e44ad)